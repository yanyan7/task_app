<h1>ユーザー一覧</h1>

<table class="table table-hover">
  <tr>
    <td>名前</td>
    <td></td>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= link_to user.name, user %></td>
    <td>
      <% if current_user && current_user.id == user.id %>
        <%= link_to "編集", edit_user_path(user), class: "btn btn-primary" %>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>
