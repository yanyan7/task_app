<h1>タスク詳細</h1>

<table class="table table-hover">
  <tr>
    <th>ID</th>
    <td><%= @task.id %></td>
  </tr>
  <tr>
    <th>名称</th>
    <td><%= @task.name %></td>
  </tr>
  <tr>
    <th>詳細</th>
    <td><%= @task.description %></td>
  </tr>
  <tr>
    <th>登録日時</th>
    <td><%= @task.created_at %></td>
  </tr>
  <tr>
    <th>更新日時</th>
    <td><%= @task.updated_at %></td>
  </tr>
  <tr>
    <th>登録者</th>
    <td><%= @task.user.name %></td>
</tr>
</table>

<%= link_to "編集", edit_task_path, class: "btn btn-primary" %>